{
    "name": "server-mocker",
    "version": "1.5.0",
    "description": "mocking http server for acceptance tests",
    "main": "lib/index.js",
    "license": "MIT",
    "files": [
        "lib/",
        "README.md"
    ],
    "scripts": {
        "build": "rimraf lib && flow && babel src/ -d lib/ --ignore '**/__tests__/**' && flow-copy-source -v -i '**/__tests__/**' src lib",
        "prepublishOnly": "yarn test && yarn build",
        "test": "jest",
        "precommit": "lint-staged"
    },
    "prettier": {
        "printWidth": 110,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": false
    },
    "lint-staged": {
        "*.{js,json,css,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.js"
        ],
        "testMatch": [
            "<rootDir>/src/**/__tests__/**/*.js"
        ]
    },
    "dependencies": {
        "multiparty": "^4.1.3"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.9.6",
        "@babel/plugin-proposal-object-rest-spread": "^7.9.6",
        "@babel/preset-flow": "^7.9.0",
        "babel-core": "^6.26.3",
        "babel-jest": "^26.0.1",
        "flow-bin": "^0.74.0",
        "flow-copy-source": "^1.2.1",
        "flow-typed": "^2.2.0",
        "husky": "^0.14.3",
        "jest": "^21.2.1",
        "lint-staged": "^5.0.0",
        "prettier": "^1.17.0",
        "supertest": "^3.0.0"
    }
}
