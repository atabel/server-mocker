{
    "name": "server-mocker",
    "version": "1.5.0",
    "description": "mocking http server for acceptance tests",
    "main": "lib/index.js",
    "license": "MIT",
    "files": [
        "lib/",
        "README.md"
    ],
    "scripts": {
        "build": "rimraf lib && flow check && babel src/ -d lib/ --ignore '**/__tests__/**' && flow-copy-source -v -i '**/__tests__/**' src lib",
        "ci": "yarn test --ci && yarn build",
        "prepublishOnly": "yarn ci",
        "test": "jest",
        "precommit": "lint-staged"
    },
    "prettier": {
        "printWidth": 110,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": false
    },
    "lint-staged": {
        "*.{js,json,css,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.js"
        ],
        "testMatch": [
            "<rootDir>/src/**/__tests__/**/*.js"
        ]
    },
    "dependencies": {
        "multiparty": "^4.1.3"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.9.6",
        "@babel/preset-flow": "^7.9.0",
        "babel-jest": "^26.0.1",
        "flow-bin": "^0.124.0",
        "flow-copy-source": "^2.0.9",
        "flow-typed": "^3.1.0",
        "husky": "^4.2.5",
        "jest": "^26.0.1",
        "lint-staged": "^10.2.2",
        "prettier": "^2.0.5",
        "supertest": "^4.0.2"
    }
}
